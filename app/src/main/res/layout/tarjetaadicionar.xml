<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="3dp"
    android:paddingTop="3dp"
    android:paddingRight="3dp"
    android:paddingBottom="3dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardproductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:background="@drawable/bordes"
        android:paddingBottom="5dp"
        android:pointerIcon="hand"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="8dp"
        card_view:cardMaxElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="276dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/idproductop"
                            android:layout_width="3dp"
                            android:layout_height="2dp"
                            android:inputType="textNoSuggestions"


                            />

                        <ImageView
                            android:id="@+id/productoimagenp"
                            android:layout_width="45dp"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/user" />

                        <TextView
                            android:id="@+id/stockp"
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:layout_alignTop="@+id/view"
                            android:layout_weight="1"

                            android:background="@drawable/botoncajaredondeada"
                            android:inputType="textNoSuggestions"
                            android:text="xxxx"
                            android:textAlignment="center"
                            android:textColor="@color/my_icons"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/botonmas"
                        android:layout_width="40dp"
                        android:layout_height="24dp"
                        android:background="@drawable/botoncajaredondeada"
                        android:elevation="1dp"
                        android:text="yy"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/botonmenos"
                        android:layout_width="36dp"
                        android:layout_height="22dp"

                        android:background="@color/accent"
                        android:text="zz"
                        android:textColor="@color/colorprincipal"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cantidadpedida"
                        android:layout_width="35dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/circulofondo"
                        android:gravity="center"
                        android:inputType="textNoSuggestions"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>