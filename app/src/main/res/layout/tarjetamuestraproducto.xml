<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    android:paddingBottom="2dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/imageLayout"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/etqueta"
                android:layout_width="46dp"
                android:layout_height="42dp"
                android:layout_alignStart="@+id/itemPhoto"
                android:layout_alignEnd="@+id/itemPhoto"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="100dp"
                android:background="@drawable/circulofondo"
                android:hint="n"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="49dp"
                android:layout_marginEnd="78dp"
                android:hint="ItemName"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/itemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemName"
                android:layout_alignStart="@+id/itemName"
                android:layout_marginTop="26dp"
                android:hint="Price"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/itemPhoto"
                android:layout_width="128dp"
                android:layout_height="116dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="24dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="49dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/botonmas"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/tabcirculof"
                android:elevation="1dp"
                android:text="+"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cantidadpedida"
                android:layout_width="35dp"
                android:layout_height="33dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/tabcirculog"
                android:gravity="center"
                android:inputType="textNoSuggestions"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/botonmenos"
                android:layout_width="40dp"
                android:layout_height="35dp"

                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/tabcirculof"
                android:minHeight="40dp"
                android:text="--"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>